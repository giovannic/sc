{
  "openapi": "3.0.0",
  "info": {
    "title": "SC Server API",
    "description": "Shared Context Server - REST and WebSocket API for managing shared contexts with real-time updates",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/contexts": {
      "post": {
        "summary": "Create a new shared context",
        "tags": ["Contexts"],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateContextRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Context created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateContextResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/contexts/{contextId}/readme": {
      "get": {
        "summary": "Retrieve README for a context",
        "tags": ["Context Details"],
        "parameters": [
          {
            "name": "contextId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "The context ID"
          }
        ],
        "responses": {
          "200": {
            "description": "README retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetReadmeResponse"
                }
              }
            }
          },
          "404": {
            "description": "Context not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update README for a context",
        "tags": ["Context Details"],
        "parameters": [
          {
            "name": "contextId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "The context ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateReadmeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "README updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateReadmeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Context not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/contexts/{contextId}/context": {
      "get": {
        "summary": "Retrieve paginated context entries",
        "tags": ["Context Entries"],
        "parameters": [
          {
            "name": "contextId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "The context ID"
          },
          {
            "name": "order",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "asc"
            },
            "description": "Sort order (chronological or reverse)"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 20
            },
            "description": "Number of entries per page"
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "description": "Number of entries to skip"
          }
        ],
        "responses": {
          "200": {
            "description": "Entries retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetContextResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Context not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add new entry to context",
        "tags": ["Context Entries"],
        "parameters": [
          {
            "name": "contextId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "The context ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddEntryRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Entry added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddEntryResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Context not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ContextEntry": {
        "type": "object",
        "required": ["id", "content", "timestamp"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique entry ID"
          },
          "content": {
            "type": "string",
            "description": "Entry content"
          },
          "timestamp": {
            "type": "integer",
            "description": "Unix timestamp in milliseconds"
          }
        }
      },
      "CreateContextRequest": {
        "type": "object",
        "properties": {
          "entries": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["content"],
              "properties": {
                "content": {
                  "type": "string",
                  "description": "Entry content"
                }
              }
            },
            "description": "Optional initial context entries"
          },
          "readme": {
            "type": "string",
            "description": "Optional README text"
          }
        }
      },
      "CreateContextResponse": {
        "type": "object",
        "required": ["uri", "contextId"],
        "properties": {
          "uri": {
            "type": "string",
            "description": "Unique URI for the context"
          },
          "contextId": {
            "type": "string",
            "format": "uuid",
            "description": "Context ID"
          }
        }
      },
      "GetReadmeResponse": {
        "type": "object",
        "required": ["readme"],
        "properties": {
          "readme": {
            "type": "string",
            "description": "README text (null if not set)"
          }
        }
      },
      "UpdateReadmeRequest": {
        "type": "object",
        "required": ["readme"],
        "properties": {
          "readme": {
            "type": "string",
            "description": "README text"
          }
        }
      },
      "UpdateReadmeResponse": {
        "type": "object",
        "required": ["success"],
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether update succeeded"
          }
        }
      },
      "GetContextResponse": {
        "type": "object",
        "required": ["entries", "total"],
        "properties": {
          "entries": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ContextEntry"
            },
            "description": "Paginated context entries"
          },
          "total": {
            "type": "integer",
            "description": "Total number of entries"
          }
        }
      },
      "AddEntryRequest": {
        "type": "object",
        "required": ["content"],
        "properties": {
          "content": {
            "type": "string",
            "description": "Entry content"
          }
        }
      },
      "AddEntryResponse": {
        "type": "object",
        "required": ["id", "timestamp"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Entry ID"
          },
          "timestamp": {
            "type": "integer",
            "description": "Unix timestamp in milliseconds"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          }
        }
      },
      "SubscriptionMessage": {
        "type": "object",
        "required": ["type", "id", "content", "timestamp"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["update"],
            "description": "Message type"
          },
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Entry ID"
          },
          "content": {
            "type": "string",
            "description": "Entry content"
          },
          "timestamp": {
            "type": "integer",
            "description": "Unix timestamp in milliseconds"
          }
        }
      }
    }
  }
}
